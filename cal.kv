<Button>
    background_color:(205/255,248/255,250/255,1)
    background_normal:""
    spacing: '10sp'
    color:(0,0,0,1)




<CalWidget>
    BoxLayout
        orientation: 'vertical'
        size:root.width,root.height
        spacing: '4sp'


        TextInput:
            id:input_box
            text:"0"
            font_size: 45
            multiline: False
            halign:"right"
            size_hint:(1,0.200)
            background_color:(200/252,252/255,250/255,1)

        Button:
            text:"Clear"
            font_size:32
            size_hint:(1,0.13)
            background_color:(5/255 , 176/255, 250/255,1)
            on_press: root.clear()





        GridLayout:
            cols:4
            rows:4
            spacing:'5sp'

            #### row1 ####

            Button:
                text:"7"
                font_size:32
                on_press: root.btnClick(7)

            Button:
                text:"8"
                font_size:32
                on_press: root.btnClick(8)

            Button:
                text:"9"
                font_size:32
                on_press: root.btnClick(9)

            Button:
                text:"-"
                font_size:32
                background_color:(120/255 , 243/255, 250/255, 1)
                on_press: root.btnClick("-")

            #### row2 ####

            Button:
                text:"4"
                font_size:32
                on_press: root.btnClick(4)

            Button:
                text:"5"
                font_size:32
                on_press: root.btnClick(5)

            Button:
                text:"6"
                font_size:32
                on_press: root.btnClick(6)

            Button:
                text:"+"
                font_size:32
                background_color:(120/255 , 243/255, 250/255, 1)
                on_press: root.btnClick("+")

            #### row3 ####

            Button:
                text:"1"
                font_size:32
                on_press: root.btnClick(1)

            Button:
                text:"2"
                font_size:32
                on_press: root.btnClick(2)

            Button:
                text:"3"
                font_size:32
                on_press: root.btnClick(3)

            Button:
                text:"*"
                font_size:32
                background_color:(120/255 , 243/255, 250/255, 1)
                on_press: root.btnClick("*")

            #### row4 ####

            Button:
                text:"."
                font_size:32
                background_color:(120/255 , 243/255, 250/255, 1)
                on_press: root.btnClick(".")

            Button:
                text:"0"
                font_size:32
                on_press: root.btnClick(0)

            Button:
                text:"="
                font_size:32
                background_color:(120/255 , 243/255, 250/255, 1)
                on_press: root.total()


            Button:
                text:"%"
                font_size:32
                background_color:(120/255 , 243/255, 250/255, 1)
                on_press: root.btnClick("/")